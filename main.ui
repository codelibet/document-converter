<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>

  <object class="GtkWindow" id="main_window">
    <property name="resizable">false</property>

    <!-- HEADER -->
    <child type="titlebar">
      <object class="GtkHeaderBar">
        <property name="show_close_button">true</property>
        <property name="title">Document Converter</property>
        <property name="subtitle">Simple • Fast • Local</property>
      </object>
    </child>

    <!-- CONTENT -->
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">20</property>
        <property name="margin">20</property>

        <!-- FORMAT + ACTION ROW -->
        <child>
          <object class="GtkBox">
            <property name="spacing">12</property>
            <property name="halign">center</property>

            <child>
              <object class="GtkComboBoxText" id="combo_original">
                <property name="width_request">140</property>
              </object>
            </child>

            <child>
              <object class="GtkLabel">
                <property name="label">→</property>
              </object>
            </child>

            <child>
              <object class="GtkComboBoxText" id="combo_convert">
                <property name="width_request">140</property>
              </object>
            </child>

            <child>
              <object class="GtkButton" id="button_convert">
                <property name="label">Convert</property>
                <style>
                  <class name="suggested-action"/>
                </style>
              </object>
            </child>

          </object>
        </child>

        <!-- FILE SELECTION -->
        <child>
          <object class="GtkGrid">
            <property name="column_spacing">12</property>

            <child>
              <object class="GtkEntry" id="entry_files">
                <property name="editable">false</property>
                <property name="hexpand">true</property>
              </object>
              <packing>
                <property name="left_attach">0</property>
                <property name="top_attach">0</property>
              </packing>
            </child>

            <child>
              <object class="GtkButton" id="button_select">
                <property name="label">Select files</property>
              </object>
              <packing>
                <property name="left_attach">1</property>
                <property name="top_attach">0</property>
              </packing>
            </child>
          </object>
        </child>

        <!-- PROGRESS -->
        <child>
          <object class="GtkProgressBar" id="progress_bar"/>
        </child>

      </object>
    </child>
  </object>
</interface>

